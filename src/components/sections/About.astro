---

import SectionHeader from '../ui/SectionHeader.astro';
import Button from '../ui/Button.astro';
import { Mail, User, Award, BookOpen, Briefcase, GraduationCap } from '../ui/icons';
import duvanpng from '../../assets/duvan-photo.png';

const cvUrl = `${import.meta.env.BASE_URL}/cv/Duvan-Mesa-CV.pdf`;
---

<section id="about" class="py-24 bg-gradient-to-b from-muted/50 to-background">
  <div class="container">
    <SectionHeader title="About Me" subtitle="Get to know me better" />

<div class="grid md:grid-cols-2 gap-12 mt-16 items-center">
  <!-- Foto -->
  <div class="relative" data-aos="fade-up">
    <div class="relative z-10">
      <div class="aspect-square relative rounded-xl overflow-hidden bg-muted">
        <img
          src={duvanpng.src}
          alt="Profile"
          width="600"
          height="600"
          class="object-cover w-full h-full"
        />
      </div>
    </div>
    <!-- Elementos decorativos -->
    <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-primary rounded-xl -z-10"></div>
    <div class="absolute -bottom-6 -right-6 w-32 h-32 border-2 border-purple-500 rounded-xl -z-10"></div>
  </div>
  
  <!-- Texto -->
  <div class="space-y-6">
    <div data-aos="fade-up">
      <h3 class="text-2xl font-bold mb-2">Who am I?</h3>
      <div class="h-1 w-12 bg-gradient-to-r from-primary to-purple-600 rounded-full mb-4"></div>
      <p class="text-muted-foreground mb-4">
        I’m a Full Stack Developer with a strong focus on building web applications from backend to frontend.
        Professionally, I have <strong>1 year of experience</strong> working with <strong>Express.js</strong> at <em>Unicolombo</em>,
        where I helped develop a management system for tour guides.
      </p>
      <p class="text-muted-foreground mb-6">
        Beyond that, I’ve built several personal and academic projects using frameworks and tools like
        <strong>Ionic + Angular</strong>, <strong>React</strong>, <strong>Next.js</strong>, and <strong>AWS</strong>.
        I enjoy experimenting with new technologies and transforming ideas into functional applications.
      </p>
    </div>
    
    <!-- Timeline / Experiencia -->
    <div data-aos="fade-up" data-aos-delay="100" class="space-y-4">
      <h4 class="font-medium">Experience & Projects</h4>
      <div class="space-y-4">
        
        <!-- Unicolombo -->
        <div class="flex">
          <div class="flex flex-col items-center mr-4">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
              <Briefcase className="h-4 w-4" />
            </div>
            <div class="w-px h-full bg-border"></div>
          </div>
          <div class="pb-4">
            <p class="text-xs text-primary font-medium">2024 — 1 year</p>
            <h4 class="text-sm font-medium">Backend Developer (Express.js)</h4>
            <p class="text-xs text-muted-foreground">Unicolombo — Tourist Guides Management App</p>
          </div>
        </div>

        <!-- Proyectos personales -->
        <div class="flex">
          <div class="flex flex-col items-center mr-4">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
              <BookOpen className="h-4 w-4" />
            </div>
            <div class="w-px h-full bg-border"></div>
          </div>
          <div class="pb-4">
            <p class="text-xs text-primary font-medium">Personal Projects</p>
            <h4 class="text-sm font-medium">Full-stack & Mobile Apps</h4>
            <p class="text-xs text-muted-foreground">
              Applications built with Ionic + Angular, React, Next.js and AWS services (Lambda, S3, etc.).
            </p>
          </div>
        </div>

        <!-- Habilidades -->
        <div class="flex">
          <div class="flex flex-col items-center mr-4">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-primary/10 text-primary">
              <Award className="h-4 w-4" />
            </div>
            <div class="w-px h-full bg-border"></div>
          </div>
          <div class="pb-4">
            <p class="text-xs text-primary font-medium">Tech Stack</p>
            <h4 class="text-sm font-medium">Main Skills</h4>
            <p class="text-xs text-muted-foreground">
              Express.js, Node.js, PostgreSQL, Prisma, Ionic, Angular, React, Next.js, AWS
            </p>
          </div>
        </div>
        
      </div>
    </div>

    <!-- Botones -->
    <div data-aos="fade-up" data-aos-delay="200" class="flex flex-wrap gap-4 pt-4">
      <Button href="#contact" class="group">
        <Mail className="mr-2 h-4 w-4" /> Contact Me
      </Button>
    <Button
      href={cvUrl}
      variant="outline"
      target="_blank"
      rel="noopener noreferrer"
      download
    >
      <User className="mr-2 h-4 w-4" /> Download CV
    </Button>
    </div>
  </div>
</div>

  </div>
</section>
