---
import SectionHeader from '../ui/SectionHeader.astro';
import { skillsData } from '../../data/skills-data';

function getExpertiseLabel(level: number): string {
  if (level >= 90) return "Expert";
  if (level >= 75) return "Advanced";
  if (level >= 60) return "Intermediate";
  return "Beginner";
}

function getExpertiseColor(level: number): string {
  if (level >= 90) return "bg-primary/10 text-primary border-primary/30";
  if (level >= 75) return "bg-blue-500/10 text-blue-500 border-blue-500/30";
  if (level >= 60) return "bg-purple-500/10 text-purple-500 border-purple-500/30";
  return "bg-muted text-muted-foreground border-muted-foreground/30";
}
---

<section id="skills" class="py-24">
  <div class="container">
    <SectionHeader title="My Skills" subtitle="What I can do" />
    
    <div class="mt-16">
      <!-- Technical & Professional Skills -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Technical Skills -->
        <div data-aos="fade-right" class="space-y-6">
          <h3 class="text-2xl font-bold">Technical Skills</h3>
          <div class="grid grid-cols-2 gap-4">
            {skillsData.technical.map((skill, index) => (
              <div 
                data-aos="fade-up" 
                data-aos-delay={index * 100} 
                class="p-4 rounded-lg border bg-card hover:shadow-md transition-all hover:scale-103"
              >
                <div class="flex flex-col h-full">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="text-primary">
                      <Fragment set:html={skill.iconHtml} />
                    </div>
                    <h4 class="font-medium">{skill.name}</h4>
                  </div>
                  <div class="mt-auto">
                    <span class={`inline-block px-2 py-1 text-xs font-medium rounded-full ${getExpertiseColor(skill.level)}`}>
                      {getExpertiseLabel(skill.level)}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Professional Skills -->
        <div data-aos="fade-left" class="space-y-6">
          <h3 class="text-2xl font-bold">Professional Skills</h3>
          <div class="grid grid-cols-2 gap-4">
            {skillsData.professional.map((skill, index) => (
              <div 
                data-aos="fade-up" 
                data-aos-delay={index * 100} 
                class="p-4 rounded-lg border bg-card hover:shadow-md transition-all hover:scale-103"
              >
                <div class="flex flex-col h-full">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="text-primary">
                      <Fragment set:html={skill.iconHtml} />
                    </div>
                    <h4 class="font-medium">{skill.name}</h4>
                  </div>
                  <div class="mt-auto">
                    <span class={`inline-block px-2 py-1 text-xs font-medium rounded-full ${getExpertiseColor(skill.level)}`}>
                      {getExpertiseLabel(skill.level)}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Tools & Technologies -->
      <div data-aos="fade-up" class="mt-16">
        <h3 class="text-2xl font-bold mb-6 text-center">Tools & Technologies</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
          {skillsData.tools.map((tool, index) => (
            <div
              data-aos="fade-up"
              data-aos-delay={index * 50}
              class="bg-muted/50 rounded-lg p-4 flex flex-col items-center justify-center text-center hover:shadow-md transition-all border border-border/50 h-32 hover:-translate-y-1"
            >
              <div class="w-12 h-12 mb-3 flex items-center justify-center text-primary">
                <Fragment set:html={tool.iconHtml} />
              </div>
              <span class="text-sm font-medium">{tool.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
